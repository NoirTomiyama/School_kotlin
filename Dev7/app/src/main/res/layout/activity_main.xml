<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" app:columnCount="6" app:rowCount="2">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cymbal1"
                android:id="@+id/imageButton2" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="cymbal1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom1"
                android:id="@+id/imageButton3" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="tom1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom2"
                android:id="@+id/imageButton4" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="tom2"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5" app:srcCompat="@drawable/cymbal2" android:background="#00000000"
                android:scaleType="fitCenter" app:layout_gravity="fill" android:onClick="cymbal2"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/hihat"
                android:id="@+id/imageButton7" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="hihat"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/snare"
                android:id="@+id/imageButton8" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="snare"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bass"
                android:id="@+id/imageButton9" app:layout_columnSpan="2" android:background="#00000000"
                android:scaleType="fitCenter" app:layout_gravity="fill" android:onClick="bass"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom3"
                android:id="@+id/imageButton10" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="tom3"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cymbal3"
                android:id="@+id/imageButton11" android:background="#00000000" android:scaleType="fitCenter"
                app:layout_gravity="fill" android:onClick="cymbal3"/>
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>