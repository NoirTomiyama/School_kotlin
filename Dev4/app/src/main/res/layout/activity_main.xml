<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_margin="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player"
                android:textSize="30sp" android:id="@+id/player" android:layout_gravity="center_horizontal"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/paa" android:id="@+id/cpu"
                android:layout_gravity="center_horizontal" android:scaleType="fitCenter"/>
        <TextView
                android:text="勝敗"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/result"
                android:textSize="30sp" android:layout_gravity="center_horizontal"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Goo"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    android:onClick="goo"
                    android:textAllCaps="false" style="@android:style/Widget.Material.Button.Colored"
                    android:layout_weight="1" android:layout_width="0dp"/>
            <Button
                    android:text="Choki"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    android:onClick="choki"
                    android:textAllCaps="false" style="@android:style/Widget.Material.Button.Colored"
                    android:layout_weight="1" android:layout_width="0dp"/>
            <Button
                    android:text="Paa"
                    android:layout_height="wrap_content" android:id="@+id/button3"
                    android:onClick="paa" android:textAllCaps="false"
                    style="@android:style/Widget.Material.Button.Colored" android:layout_weight="1"
                    android:layout_width="0dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>