<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartActivity">

    <TextView
            android:text="ぴったりゲーム"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/titleTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/intentButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="42sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <Button
            android:text="10秒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/intentButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>